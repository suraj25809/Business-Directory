<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Listing Page</title>

    <link rel="icon" href="/images/favicon.png" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">

    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>

  </head>
  <body>

    <!-- Header Start -->
    <%- include('partials/header.ejs')%>
    <!-- Header End -->


    <!--- breadcrumb Section Start ---->
    
    <div class="breadcrumb-section" style="background-image:url(/images/16.jpg);">
        <nav aria-label="breadcrumb">
          <h3>Listing</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Listing</li>
          </ol>
        </nav>
    </div> 
    
    <!--- breadcrumb Section End -->

    <!--- About Section Start -->
      
    <!--- About Section End -->
      <div class="pt-50 pb-50">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div>
                        <h4 class="title-3">Listing</h4>
                    </div>

                    <% if(typeof error_msg!= 'undefined'){ %> 
                      <div class="alert alert-warning"><%= error_msg %> </div>
                    <% } %>
                    
                    <% if(bdata != ''){ %>
                    <% bdata.forEach((result) => { %>
          
                    <div class="single-listing">
                      <div class="row">
                          <div class="col-lg-6 col-md-6">
                              <div class="image-box">
                                  <img src="/<%= result.bimage %>" alt="list-image" class="img-fluid">
                              </div>
                          </div>
                          <div class="col-lg-6 col-md-6">
                              <div class="list-content">
                                  <ul class="tags">
                                    <li><a href="#"><%= result.cname %></a></li>
                                  </ul>
                                  <div class="lower-content">
                                      <h3><%= result.bname %></h3>
                                  </div>
                                  <div class="location">
                                    <i class='bx bx-map'></i>
                                    <%= result.address %>
                                  </div>
                                  <div class="d-flex align-items-center justify-content-between">
                                    <div class="rating">
                                      <i class="bx bxs-star"></i>
                                      <i class="bx bxs-star"></i>
                                      <i class="bx bxs-star"></i>
                                      <i class="bx bxs-star"></i>
                                      <i class="bx bx-star"></i>
                                      <span class="count">(10)</span>
                                    </div>
                                  </div>
                                  <div>
                                    <a href="/view/<%= result._id %>" class="default-btn">More Details</a>
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>

                  <% }) %>
                  <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No Listing Found!!!</h1>
                  <% } %>
 

                </div>
                <div class="col-lg-5">
                    

                  <div class="category-side-widget mt-50">
                    <div class="category-side-widget-header">
                      <div class="category-thumb-details">
                        <h4 style="font-weight: 600;">Search Box</h4>
                      </div>
                    </div>
                    <div class="category-side-widget-body">
                      <form action="/search" method="GET">
                      <div class="form-group">
                        <label>What are you looking for?</label>
                        <input type="text" class="form-control" name="name" placeholder="What are you looking for?">
                      </div>
                      <div class="form-group">
                        <label>Location</label>
                        <input type="text" class="form-control" name="location" placeholder="Enter Location">
                      </div>
                      <!-- <div class="form-group">
                        <label>Select</label>
                        <select class="form-select">
                          <option selected>Select</option>
                          <option value="1">One</option>
                          <option value="2">Two</option>
                          <option value="3">Three</option>
                        </select>
                      </div> -->
                      <button class="default-btn">Search Now</button>
                    </form>

                    </div>
                  </div>


                </div>
            </div>
            
        </div>
      </div>
    <!-- Footer Section --->
    <%- include('partials/footer.ejs')%>
    <!-- Footer Section --->


    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

  </body>
</html>
