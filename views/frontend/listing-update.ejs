<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Add Listing</title>

    <link rel="icon" href="/images/favicon.png" type="image/x-icon">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/style.css">

    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet"> 

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" integrity="sha512-xodZBNTC5n17Xt2atTPuE1HxjVMSvLVW9ocqUKLsCC5CXdbqCmblAshOMAS6/keqq/sMZMZ19scR4PsZChSR7A==" crossorigin=""/>

  </head>
  <body>

    <!-- Header Start -->
    <%- include('partials/header.ejs')%>
    <!-- Header End -->


    <!--- breadcrumb Section Start ---->
    
    <div class="breadcrumb-section" style="background-image:url('/images/16.jpg');">
        <nav aria-label="breadcrumb">
          <h3>Add Listing</h3>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Add Listing</li>
          </ol>
        </nav>
    </div> 
    
    <!--- breadcrumb Section End -->

    <!--- Listing Section Start -->
 
      <div class="pt-50 pb-50">
        <div class="container">
            <div class="row">

                <% if(message){ %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>

                <form method="post" enctype="multipart/form-data">

                    <input type="hidden" name="userId" value="<%= userdata._id %>">

                    <h4 class="title-2">Category Informations</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Select Category</label>
                                <div class="col-md-12">
                                <select class="form-select" name="category" required>
                                    <option value="<%= business.cname %>"><%= business.cname %> </option>
                                    <% data.forEach((row, index) => { %>
                                    <option value="<%= row.cname %>"><%= row.cname %></option>
                                    <% }) %>
                                </select>
                                </div>
                            </div>
                      </div>
                    </div>
                      
                    <h4 class="title-2">Basic Informations</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Business Name</label>
                            <input type="text" class="form-control" name="bname" value="<%= business.bname %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Business Tagline</label>
                            <input type="text" class="form-control" name="btagline" value="<%= business.btitle %>" required>
                          </div>
                      </div>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" name="bdetails" required><%= business.bdetails %></textarea>
                    </div>

                    <h4 class="title-2 mt-5">Contact Informations</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" name="uname" value="<%= business.uname %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Phone Number</label>
                            <input type="text" class="form-control" name="phone" maxlength="10" minlength="10" value="<%= business.phone %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Alternative Phone Number</label>
                            <input type="text" class="form-control" name="aphone" maxlength="10" minlength="10" value="<%= business.aphone %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Email Address</label>
                            <input type="email" class="form-control" name="email" value="<%= business.email %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Alternative Email Address</label>
                            <input type="email" class="form-control" name="aemail" value="<%= business.aemail %>" required>
                          </div>
                      </div>
                    </div>

                    <h4 class="title-2 mt-5">Listing Location</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Address</label>
                            <input type="text" class="form-control" name="address" value="<%= business.address %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">City</label>
                            <input type="text" class="form-control" name="city" value="<%= business.city %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Pincode</label>
                            <input type="text" class="form-control" maxlength="6" minlength="6" name="pincode" value="<%= business.pincode %>" required>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">State</label>
                            <input type="text" class="form-control" name="state" value="<%= business.state %>" required>
                          </div>
                      </div>
                    </div>

                    <h4 class="title-2 mt-5">Image</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Business Image</label>
                            <input type="file" class="form-control" name="image" placeholder="Enter Address">
                          </div>

                          <input type="hidden" name="old_image" value="<%= business.bimage %>" />

                          <h5>Status</h5>
				                  <div class="form-group row">
		                        <div class="col-lg-12">
                              <div class="form-check form-check-inline">
                                  <input class="form-check-input" type="radio" name="status" value="Active" checked>
                                  <label class="form-check-label">Active</label>
                              </div>
                              <div class="form-check form-check-inline">
                                  <input class="form-check-input" type="radio" name="status" value="Inactive">
                                  <label class="form-check-label">Inactive</label>
                              </div>
				                    </div>
				                </div>

                      </div>
                      <div class="col-lg-6">
                        <div class="mb-3">
                            <img src="/<%= business.bimage %>" alt="user-images" width="350px" height="350px" class="img-thumbnail mt-3">
                        </div>
                      </div>
                    </div>

                    <h4 class="title-2 mt-5">Location Details</h4>
                    <hr/>
                    <div class="row">
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Latitude</label>
                            <input type="text" class="form-control" name="latitude" value="<%= business.latitude %>" id="lat" readonly>
                          </div>
                      </div>
                      <div class="col-lg-6">
                          <div class="mb-3">
                            <label class="form-label">Longitude</label>
                            <input type="text" class="form-control" name="longitude" value="<%= business.longitude %>" id="lon" readonly>
                          </div>
                      </div>
                      <div class="col-lg-12">
                          <div id="myMap" style="height: 450px;"></div>
                      </div>
                    </div>

                    <div class="text-left mt-5">
                        <button class="default-btn-1">Update Listing</button>
                    </div>

                </form>
            </div>
            
        </div>
      </div>


    <!--- Listing Section End -->

    <!-- Footer Section --->
    <%- include('partials/footer.ejs')%>
    <!-- Footer Section --->


    <!-- Scripts -->

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js" integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA==" crossorigin=""></script>

    <script type="text/javascript">

        // map
        function getLocation()
	    {
	        var latitudes = document.getElementById('lat').value;
	        var longitudes = document.getElementById('lon').value; 


	        var map = L.map('myMap').setView([latitudes, longitudes], 13);

	        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors' }).addTo(map);

	        let newMarker = new L.marker([latitudes, longitudes], {draggable: true}).addTo(map);
	            
	        newMarker.on('dragend', function(event){
	            var position = newMarker.getLatLng();
	            console.log(position.lat + " : " +  position.lng);
	            newMarker.setLatLng(position, { draggable: 'true' }).bindPopup(position).update();

	            $("#lat").val(position.lat);
	            $("#lon").val(position.lng).keyup();
	        });
	        map.addLayer(newMarker);
	 
	    }

	    // window load event occur
	    window.addEventListener("load", getLocation);

    </script>
  </body>
</html>
